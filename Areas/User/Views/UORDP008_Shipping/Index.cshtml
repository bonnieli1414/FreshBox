@model IEnumerable<FreshBox.Models.Shippings>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>
                @await Html.PartialAsync("_PartialFormCreate")
            </th>
            <th>
                @Html.ColumnSort("ShippingNo", @Html.DisplayNameFor(model => model.ShippingNo))
            </th>
            <th>
                @Html.ColumnSort("ShippingName", @Html.DisplayNameFor(model => model.ShippingName))
            </th>
            <th>
                @Html.ColumnSort("Remark", @Html.DisplayNameFor(model => model.Remark))
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ActionService.RowId = item.Id;
            ActionService.RowData = (item.ShippingName == null) ? "" : $"{item.ShippingNo} {item.ShippingName}";

            <tr>
                <td>
                    @await Html.PartialAsync("_PartialFormEdit")
                    @await Html.PartialAsync("_PartialFormDelete")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingName)
                </td>
                <td class="table-wrap">
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
            </tr>
        }
    </tbody>
</table>