@{
    ViewData["Title"] = "PhotoUpload";
    Layout = "_LayoutAdmin";
}
<style>
    .card.headerheader {
        border-radius: calc(.25rem - 1px) calc(.25rem - 1px) 0 0
    }
</style>

<div class="card card-size-medium mt-5">
    <div class="card header bg-secondary text-white py-2">
        <div class="pt-2 px-2">
            <div class="float-start">
                <h4>@ActionService.ViewActionName</h4>
            </div>
            <div class="float-end">
                <h4>@ActionService.ViewPrgInfo</h4>
            </div>
        </div>
    </div>
    <div class="card body p-2">
        <form method="post" enctype="multipart/form-data">
            <div class="row align-items-center">
                <div class="col-md-10 my-2">
                    <input type="file" id="file" name="file" class="form-control" />
                </div>
                <div class="col-md-2 ps-4">
                    <button type="submit" class="btn btn-primary">上傳檔案</button>
                </div>
            </div>
        </form>
        <hr>
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("返回前一頁", "Index", ActionService.Controller, new { area = ActionService.Area }, new
                    {
                        @class = "btn btn-success"
                    })
            </div>
        </div>
    </div>
</div>