<script>
    function DeleteData(id, data) {
        let urlName;
        if(data.indexOf("圖片")!==-1){
            // 如果 data 包含 "圖片"，則設置相應的 URL
            urlName = "@ActionService.CurrentActionLinkUrl("DeletePhoto")";
        }else{
            urlName = "@ActionService.CurrentActionLinkUrl("DeleteRow")";
        }
        var message = '確認要刪除';
        if (!!data) {
            message += ' [' + data + '] ?'
        }
        else {
            message += '此筆資料?'
        }

        Swal.fire({
            title: "<strong>您確定要刪除?</strong>",
            text: message,
            icon: 'question',
            showCancelButton: true,
            focusConfirm: false,
            closeOnConfirm: false,
            confirmButtonText: '<i class="fas fa-check pe-2"></i>確定',
            cancelButtonText: '<i class="fas fa-times pe-2"></i>取消',
        }).then(function (result) {
            if (result.isConfirmed) {
                $.ajax({
                    url: urlName,
                    data: { "id": id },
                    type: "POST",
                    dataType: "json",
                }).done(function (value) {
                    if (value.Mode == true) {
                        Swal.fire({
                            title: "<strong>提示訊息</strong>",
