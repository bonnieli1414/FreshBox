@model vmContact

@{
    ViewData["Title"] = "聯絡我們";
    Layout = "_Layout";
}
<!--==================================================-->
<!-- Start Banner區域 -->
<!--==================================================-->
<section class="banner-inner-section">
    <div class="dark-overlay">
        <div class="container" style="transform:translateY(100%);">
            <div class="row">
                <div class="col-lg-12 wow fadeInUp animated">
                    <div class="banner-inner-title">
                        <h1>@ViewData["Title"]</h1>
                    </div>
                    <div class="banner-inner-link">
                        <ul>
                            <li><a href="@Url.Action("Index" , "Home" , new{area=""})">首頁</a></li>
                            <li><i class="bi bi-arrow-right"></i></li>
                            <li><a href="@Url.Action("Contact" , "Home" , new{area=""})">@ViewData["Title"]</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--==================================================-->
<!-- End Banner區域 -->
<!--==================================================-->


<!--==================================================-->
<!-- Start 聯絡我們區域 -->
<!--==================================================-->
<section class="contact-inner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="organic-section-sub-title wow fadeInLeft animated">
                    <h6>聯絡我們</h6>
                </div>
                <div class="oraganic-section-title wow fadeInLeft animated">
                    <h1>問題或建議？聯繫我們</h1>
                </div>
                <div class="contact-inner-form wow fadeInUp animated">
                    <form asp-action="Contact" class="mx-auto pb-5" style="max-width: 720px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ContactorName" class="control-label"></label>
                            <input asp-for="ContactorName" class="form-control" placeholder="姓名" />
                            <span asp-validation-for="ContactorName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactorEmail" class="control-label"></label>
                            <input asp-for="ContactorEmail" class="form-control" placeholder="email" />
                            <span asp-validation-for="ContactorEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HeaderText" class="control-label"></label>
                            <input asp-for="HeaderText" class="form-control" placeholder="主旨" />
                            <span asp-validation-for="HeaderText" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MessageText" class="control-label"></label>
                            <textarea asp-for="MessageText" class="form-control" rows="5"
                                placeholder="留言"></textarea>
                        </div>
                        <div class="form-group mt-5">
                            <input type="submit" value="送出" class="btn btn-primary me-1" />
                            <a asp-action="Index" class="btn btn-secondary ReturnButton">返回首頁</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-inner-item wow fadeInRight animated">
                    <div class="contact-inner-item-icon">
                        <img src="@Url.Content("~/vendor/moban/static/picture/contact-inner-icon.png")" alt="icon">
                    </div>
                    <div class="contact-inner-item-content">
                        <div class="contact-inner-item-title">
                            <h6>位址</h6>
                        </div>
                        <div class="contact-inner-item-desc">
                            <p>326桃園市楊梅區幼獅路二段3號</p>
                        </div>
                    </div>
                </div>
                <div class="contact-inner-item wow fadeInLeft animated">
                    <div class="contact-inner-item-icon">
                        <img src="@Url.Content("~/vendor/moban/static/picture/contact-inner-icon-2.png")" alt="icon">
                    </div>
                    <div class="contact-inner-item-content">
                        <div class="contact-inner-item-title">
                            <h6>E-Mail</h6>
                        </div>
                        <div class="contact-inner-item-desc">
                            <a href="mailto: freshbox@company.com">
                                <i class="fas fa-envelope"></i>
                                freshbox@company.com
                            </a>
                            <a href="mailto: freshbox@gmail.com">
                                <i class="fas fa-envelope"></i>
                                freshbox@gmail.com
                            </a>
                        </div>
                    </div>
                </div>
                <div class="contact-inner-item wow fadeInRight animated">
                    <div class="contact-inner-item-icon">
                        <i class="bi bi-person-rolodex" style="color: #7fbd43; font-size: 28px;"></i>
                    </div>
                    <div class="contact-inner-item-content">
                        <div class="contact-inner-item-title">
                            <h6>與我聯絡</h6>
                        </div>
                        <div class="contact-inner-item-desc">
                            <a href="tel:+886-3-4641162">
                                <i class="fas fa-phone-volume"></i>
                                +886 3 464-1162
                            </a>
                            <a href="tel:+886-912-345678">
                                <i class="fas fa-phone-volume"></i>
                                +886 912 345-678
                            </a>
                        </div>
                    </div>
                </div>
                <div class="contact-inner-social wow fadeInLeft animated">
                    <ul>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--==================================================-->
<!-- End 聯絡我們區域 -->
<!--==================================================-->